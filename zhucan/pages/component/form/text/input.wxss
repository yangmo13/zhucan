/* pages/component/form/input.wxss */
.ipt{
  
  margin-top: 20rpx;
  height: 80rpx;
}
.ipt_box{
  display: flex;
  justify-content: start;
  align-items: center;
  padding:0 30rpx;
  height: 100%;
}
.ipt_box text{
  display: inline-block;
  width: 24rpx;
  color: #db001b;

 
}
.rich_box{
 
  min-height: 300rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: center;
}
.rich_box .rich{
  border: 4rpx solid #e7e7e7;

  width: 100%;
  display: block;
  padding: 20rpx 30rpx;

  font-size: 30rpx;

}
.ipt_box input{
  border-bottom: 4rpx solid #e7e7e7;
  flex: 1;
  margin-left: 20rpx;
  font-size: 30rpx;
  padding-left: 10rpx;
 
}
.ipt_text{
min-width:100rpx ;

height: 60rpx;
line-height: 60rpx;
color: #333;
}