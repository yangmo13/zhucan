<view class="basic" style="padding-top:{{height}}px">
	<!-- 头部导航栏 -->
	<header text="基本情况" isNew="{{isNew}}"></header>

	<!-- 表单部分 -->
	<view class="basic_box">
		<!-- 姓名 -->
		<ipt isRed='{{true}}' text='姓名 :'
		 msg='{{form.name}}' 
		 bind:blur="iptBlur"
	  	data-test="test_name"
		 iswrong="{{test_name}}" 
		 data-name="name"></ipt>
		<!-- 身份证号码 -->
		<ipt isRed='{{true}}' iswrong="{{test_idcard}}" 
		type="number"
		data-test="test_idcard" text='身份证号码 :' msg='{{form.idcard}}' bind:blur="iptBlur" data-name="idcard"></ipt>
		<!-- 参加工作时间 -->
		<number isRed='{{true}}' text='参加工作时间' msg='{{form.job_time}}' 
		bind:blur="iptBlur" 	data-test="must" data-name="job_time"></number>

		<local
		isRed='{{true}}' 	data-test="must" iswrong="{{iswrong}}" text='现居住城市 :' msg='{{form.city}}' bind:blur="iptBlur" data-name="city"
		></local>
		<!-- 手机号码 -->
		<ipt isRed='{{true}}' iswrong="{{test_phone}}" data-test="test_phone" text='手机号码 :' 
		type="number"
		msg='{{form.phone}}' bind:blur="iptBlur" data-name="phone"></ipt>

	</view>
	<!-- 提交按钮 -->
	<view class="sunmit">
		<button id="sub_btn" bindtap="next">保存</button>
	</view>

</view>