/* pages/login/wanshan/index.wxss */
page {
  width: 100%;
  height: 100%;

}

.wanshan_box {
  width: 100%;
  height: 100%;
  padding-top: 178rpx;
}

.canji_qingkuang {

  padding: 10rpx 30rpx;
  color: #555;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.canji_qingkuang text {
  font-size: 24rpx;
  display: inline-block;
  height: 24rpx;
  line-height: 24rpx;
  padding: 0 10rpx;
}

.canji_qingkuang text:first-child {
  border-right: 1px solid #ccc;

}

.canji_qingkuang_box {
  height: 50rpx;
  margin-bottom: 10rpx;


}

.wanshan_top {
  width: 100%;
  height: 168rpx;

  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;

}

.jianjie_top {
  position: relative;
}

.jianjie_top,
.jianjie_bottom {
  height: 100rpx;
  width: 100%;

}

.jianjie_top text {
  height: 100rpx;
  line-height: 100rpx;

}

.jianjie_name {
  font-weight: 600;
  font-size: 40rpx;
  margin-left: 30rpx;
  margin-right: 10rpx;
}

.jianjie_bottom {
  display: flex;
  justify-content: start;
  align-items: center;
  height: 50rpx;
}

.jianjie_box {
  height: 24rpx;
  border-right: 1px solid #ccc;
  width: 100rpx;
  font-size: 28rpx;
  padding: 5rpx 15rpx;
  text-align: center;
  line-height: 22rpx;
  overflow: hidden;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.jianjie_box:last-child {
  width: auto;
  border: none;
}

.job {
  width: 100%;
  margin-top: 40rpx;
}

.yixiang {
  font-weight: 550;
  font-size: 32rpx;
  padding-left: 30rpx;
  margin-bottom: 14rpx;
  position: relative;
  color: #333;
}

.yixiang_write {
  width: 30rpx;
  height: 30rpx;
  padding: 30rpx;
  position: absolute;
  right: 13rpx;
  top: -33rpx;


}

.yixiang_write image {
  width: 100%;
  height: 100%;
}

.job_top {
  height: 50rpx;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: start;
  align-items: center;
}

.job_left {
  width: 30rpx;
  height: 30rpx;
  margin-left: 30rpx;
  margin-right: 40rpx;
}

.job_left image {
  width: 100%;
  height: 100%;
}

.job_right {
  font-size: 28rpx;
  line-height: 30rpx;
  margin: 6rpx 0 0 0;

}

.station,
.workplace {
  text-align: center;
  padding-right: 20rpx;
  width: 90rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.job_right_first {
  border-left: 1rpx solid #ccc;
  padding-left: 20rpx;

}

.jianjie_top .yixiang_write {

  top: -13rpx
}

.jingli {
  width: 100%;
  height: 500rpx;

}

.jingli_box {
  color: #333;
}

.jingli_add {
  width: 30rpx;
  height: 30rpx;
}

.jingli_add image {
  width: 100%;
  height: 100%;
}

.jingli_add_box {
  width: 150rpx;
  height: 50rpx;

  position: absolute;
  right: 1rpx;
  top: 1rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.jingli_add_box text {
  color: #25b2b7;
  font-size: 28rpx;
  display: block;
  margin-top: 7rpx;
  margin-left: 13rpx;

}

.jingli_box_top {
  position: relative;
  font-size: 30rpx;
  padding-left: 30rpx;
  font-weight: 550;
}

.jingli_box_bottom {
  margin-top: 15rpx;
  color: #545454;
  font-size: 28rpx;
  margin-left: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.jingli_box_bottom text {
  padding: 0 10rpx;
  border-left: 1px solid #ccc;
}

.jingli_box_bottom text:first-child {
  border-left: none;
  padding-left: 0;
}

.jingli {
  margin-top: 60rpx;
}

.next {

  margin-left: 0 !important;
  margin-right: 0 !important;
  background: #25b2b7;
  display: block;
  width: 560rpx !important;
  font-weight: normal;
  color: white;
  display: inline-block;

}

.next_box {
  position: fixed;
  bottom: 30rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.next_box text {
  font-size: 32rpx;
  color: #333;
  margin-left: 20rpx;
  position: absolute;
  right: 20rpx;
}
/* 新添加部分 */
.jingli_box_bottom_mes{
margin-bottom: 20rpx;
}
.jingli_box_bottom_mes_name{
  color: #333;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  
}
.jingli_box_bottom_mes_name_img{
  width: 20rpx;
  height: 20rpx;
}
.jingli_box_bottom_mes_name_img image{
  width: 100%;
  height: 100%;
  display: block;
}
.jingli_box_bottom_mes_name_company{
  margin-left: 20rpx;
}
.jingli_box_bottom_mes_position{

}
.jingli_box_bottom_mes_content{
  margin-top: 15rpx;
}
.jingli_box_bottom_mes_name_box{
  display: flex;
  justify-content: start;
  align-items: center;
}
.iswrite{
  width: 100rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.iswrite image{

  width: 30rpx;
  height: 30rpx;
}