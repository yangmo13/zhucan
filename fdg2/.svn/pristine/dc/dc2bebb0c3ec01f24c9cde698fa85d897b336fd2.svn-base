<!doctype html>
<html>
<head>
#include("/common/include.html", libs=["layui"])
</head>
<body>
<form class="layui-form layui-form-pane">
	<div class="layui-form-item">
		<label class="layui-form-label">菜单名称</label>
		<div class="layui-input-block">
			<label class="layui-input">#(menu.title)</label>
		</div>
	</div>
	<div class="layui-form-item">
		<label class="layui-form-label">菜单图标</label>
		<div class="layui-input-block">
			<label class="layui-input">#(menu.icon)</label>
		</div>
	</div>
	<div class="layui-form-item">
		<label class="layui-form-label">菜单路径</label>
		<div class="layui-input-block">
			<label class="layui-input">#(menu.path)</label>
		</div>
	</div>
	<div class="layui-form-item">
		<label class="layui-form-label">父菜单</label>
		<div class="layui-input-block">
			<label id='parentName' class="layui-input"></label>
		</div>
	</div>
	<div>
		<table class="layui-hide" id="functionTable" lay-filter="fun"></table>
	</div>
</form>
<script type="text/html" id="indexTpl">
    {{d.LAY_TABLE_INDEX+1}}
</script>
<script type="text/javascript">
#include("menu_view.js")
</script>
</body>
</html>