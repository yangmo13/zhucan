page{
  width: 100%;
  height: 100%
}
.tripMes{
background-color: var(--gray);
width: 100%;
height: 100%;
}
.MesBox{
  padding: 20rpx;
}
.mes{
  background-color: white;
  padding: 30rpx;
  position: relative;
}
.mes_box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}
#TripNow{
  width: 137rpx;
height: 48rpx;
line-height: 49rpx;
  font-size: 26rpx;
  color: white;
  background-color: var(--blue);
  padding: 0;
  border-radius: 8rpx;
}
.position{
  font-size: 34rpx;
  font-weight: 550;
  color: #333;
}
.position text:first-child{
  font-size: 28rpx;
  font-weight: normal;
  margin-right: 10rpx;
}
.userTime{
  font-size: 27rpx;
  color: #333;

}
.user_time text{
    margin-right: 12rpx;
}
.user_mes text{
  margin-right: 12rpx;
}
.link_phone{
  color: #333;
}
.link{
  margin-top: 5rpx;
  font-size: 30rpx;
}
.isFinish{
  width: 150rpx;
height: 150rpx;
border: 8rpx solid #ccc;
border-radius: 1560rpx;
font-size: 36rpx;
color: #ccc;
text-align: center;
line-height: 150rpx;
font-weight: 550;
transform: rotate(-30deg);
-ms-transform: rotate(-30deg);
position: absolute;
top: 54rpx;
left: 54%;
margin-left: -75rpx;

}
.other{
  background-color: white;
}
.other_msg{
  padding: 20rpx;
  font-size: 30rpx;
  color: #999;
  padding-left: 10rpx;
  
}