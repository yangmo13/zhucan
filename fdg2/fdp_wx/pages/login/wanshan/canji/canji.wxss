/* pages/login/wanshan/canji/canji.wxss */
page{
  width: 100%;
  height: 100%;

}
.form{
  padding: 30rpx;
  height: 400rpx;
}
.canji_leixing{
  width: 100%;
  height: 300rpx;
  
  display: flex;
  justify-content: center;

}
.left_name{
  
  padding: 0 20rpx;
  padding-right: 40rpx;
}
.canji_dengji{
  height: 300rpx;

display: flex;
justify-content: center;

}
radio .wx-radio-input{
  width: 30rpx;
  height: 30rpx;
  background-color: white !important;
}
radio .wx-radio-input.wx-radio-input-checked{
  color: #555;
  background: red;
  border: 2rpx solid #ccc !important;
}
.bottom{
  position: fixed;
  bottom: 100rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;

}
.radio_txt{
  font-size: 26rpx;

}
#btn {
 width: 650rpx;
height: 80rpx;
background-color: var(--blue);
color: white;
font-size: 34rxp;
line-height: 48rpx;
text-align: center;
font-weight: 500;

}

.radio_txt label{
  margin-right: 10rpx;
}
radio .wx-radio-input.wx-radio-input-checked::before{
  content: ''; 
  border-radius: 50%;
  width: 20rpx; 
  height: 20rpx;
  line-height: 36rpx;
  text-align: center;
  font-size:36rpx; 
  color:#fff;
  background: #555;
 
}
.left_name text:first-child{
  color: red;
  margin-right: 10rpx;
}
.right_checkbox{
  flex: 1;
  
  height: 100%;
}
.check_box label{
  width: 170rpx;
  
  font-size: 26rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
checkbox .wx-checkbox-input{
  width: 30rpx;
  height: 30rpx;

}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  color: #555;
}
.check_box{
  width: 400rpx;
  display: flex;
  justify-content: start;

  flex-wrap: wrap;
}