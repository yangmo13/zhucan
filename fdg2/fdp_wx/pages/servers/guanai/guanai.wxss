page{
  width: 100%;
  height: 100%;
  background-color: #f4f6f8;
}
.love_nav{
  padding: 30rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  align-items: center;
}
.love_nav_li{
  width: 200rpx;
  margin-top: 20rpx;
  
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.nav_img{
  width: 80rpx;
  height: 80rpx;
  
}
.nav_img image{
  width: 100%;
  height: 100%;
}
.nav_txt{
  width: 100%;
  height: 50rpx;
  
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.genres{
  padding:20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.genres_left{
  display: flex;
  justify-content: center;
  align-items: center;
}
.genres_img{
  width: 30rpx;
  height: 30rpx;
  
}
.genres_img image{
width: 100%;
height: 100%;
}
.genres_txt{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-left: 10rpx;
}
.genres_right{
  display: flex;
  justify-content: center;
  align-items: center;
}
.genres_more_txt{
  font-size: 26rpx;
  color: #333;
}
.genres_more_icon{
  width: 30rpx;
  height: 30rpx;

}
.genres_more_icon image{
  width: 100%;
  height: 100%;

}
.list_li{
  padding: 30rpx;
  background-color: white;
  margin-bottom: 20rpx;
}
.list_li_topic{

  font-size: 32rpx;
  color: #4a4746;
  padding: 20rpx 0;
  padding-top: 10rpx;
}
.list_li_date {
  padding: 10rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
}
.apply{
  font-size: 26rpx;
  color: #4a4746;

}
.time{
  font-size: 26rpx;
  color: #4a4746;
}