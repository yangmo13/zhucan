/* pages/servers/guanai/map/map.wxss */
page{
  width: 100%;
  height: 100%;
  display: flex;
}
.map{
  flex: 1;
  width: 100%;
}
.mapText{
  width: 100%;
  height: 100%;
  position: relative;
}
.map_btn{
position: absolute;
width: 100%;
bottom: 60rpx;
z-index: 9999;

display: flex;
justify-content: center;
align-items: center;

}

.the_btn{
  width: 600rpx !important;
  height: 70rpx !important;
  background-color: var(--blue) !important;
  color: white !important;
  font-weight: 400 !important;
  line-height: 40rpx !important;
}
.btn_hover{
  background-color: #5cbcb2 !important;
}
.map_list_box{
  position: absolute;
  width: 600rpx;
 
  box-shadow: 0 0 15rpx #999;
  background-color: white;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);

  
}
.map_list_box .map_list:last-child{
  border-bottom: none
}
.map_list{
  padding: 30rpx;
  border-bottom: 1rpx solid #ccc;
}