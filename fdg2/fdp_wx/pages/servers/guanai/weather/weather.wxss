page {
  width: 100%;
  height: 100%;
}

.weather {
  width: 100%;
  height: 100%;
  position: relative;
}

.back_img {
  width: 100%;
  height: 98%;
  position: absolute;
  z-index: -2;
}

.back_img image {
  width: 100%;
  height: 100%;
}

.back_img2,
.back_img3 {
  position: absolute;
  z-index: 0;
  width: 100%;
  height: auto;
  left: 0;
  bottom: 113rpx;
}

.back_img2 image {
  width: 100%;
}

.back_img3 {
  z-index: -1;
}

.back_img3 image {
  width: 100%;
}

.weather_mes {
  width: 100%;
  position: absolute;
  width: 500rpx;

  left: 50%;
  top: 38%;
  transform: translate(-50%,-50%);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.twoday {
  width: 100%;
  background-color: white;
  position: absolute;
  bottom: 0rpx;
  left: 0;
 
}
  .twoday_box{
    padding: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 30rpx;
  }
  .twoday_box .wether_today:first-child{
    border-right: 1px solid #ddd;
  }
.wether_today{
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;

  padding: 30rpx 20rpx;
  
}
.weather_tomorrow{
  flex: 1;
  height: 100%;
}
.today_mes{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  flex-direction: column;
  color: #333;
  font-size: 28rpx;
}
.today{
  font-size: 48rpx;
  color: #333;
}
.temperature{
  font-size: 130rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-content: flex-start;
}
.temperature view:last-child{
  font-size: 50rpx;
display: flex;
justify-content: start;
align-items: flex-end;
padding: 20rpx 0;
}
.weather_name{
  font-size: 50rpx;
  color: white;
  text-align: center;
  margin-top: 10rpx;
}
.humidity{
  font-size: 40rpx;
  color: white;
  text-align: center;
  margin-top: 20rpx;
}
.hint{
  font-size: 26rpx;
  color: #8080ff;
  text-align: center;
  margin-top: 15rpx;
}
.voice_reminder{
  width: 170rpx;
  height: 170rpx ;
  margin-top: 40rpx;
}
.voice_reminder image{
  width: 100%;
  height: 100%;
}